#General
BACKEND_SERVER_HOST=127.0.0.1
BACKEND_SERVER_PORT=8000
BACKEND_SERVER_WORKERS=1
BACKEND_DEBUG=true
BACKEND_LOGGING_LEVEL=debug

#Middleware
BACKEND_CORS=true
BACKEND_HOST=http://localhost:
BACKEND_CORS_ORIGIN=*
BACKEND_CORS_METHODS=GET,HEAD,PUT,PATCH,POST,DELETE
BACKEND_CORS_HEADERS=Origin, X-Requested-With, Content-Type, Accept, Authorization
BACKEND_CORS_CREDENTIALS=true
BACKEND_CORS_MAXAGE=86400


